{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declarationDir": "dist",
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./index.ts", "./src/**/*.ts", "./types.d.ts", "./test/**/*.ts", "./js/**/*.ts", "./react/**/*.ts"]
}
