{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "dom"],
    "paths": {
      "react": ["preact/compat"],
      "react-dom": ["preact/compat"]
    }
  }
}
